<?xml version="1.0"?>
<ruleset>
    <conf
        client_package="WordPart"
        enable_domain_lib="1"
        api_package="Chameleon5::API::JSON"
        api_secret_key="23661945372.7215"
        template_package="Chameleon5::Template::XSLT"
        serve_static_xsl="1"
        enable_transactions="1"
        enable_beam="1"
        />
    <site_configuration_keys>
        <key name="repository" value="word_part"/>
        <key name="program_time_zone" value="America/New_York"/>
    </site_configuration_keys>

    <pages>
        <page uri="/" name="home">
            <resources>
                <resource>
                    <sub value="view_parts"/>
                    <http_method value="GET"/>
                    <http_method value="POST"/>
                    <class value="public"/>
                </resource>
            </resources>
        </page>

        <page name="new" uri="/new/">
            <resources>
                <resource>
                    <sub value="edit_part"/>
                    <http_method value="GET"/>
                    <http_method value="POST"/>
                    <class value="public"/>
                </resource>
            </resources>
        </page>

        <page name="edit" uri="/edit/{affix}/">
            <resources>
                <resource>
                    <sub value="edit_part"/>
                    <http_method value="GET"/>
                    <http_method value="POST"/>
                    <class value="public"/>
                </resource>
            </resources>
        </page>

        <page name="remove" uri="/remove/{affix}/">
            <resources>
                <resource>
                    <sub value="edit_part"/>
                    <arg name="remove" value="1"/>
                    <http_method value="GET"/>
                    <http_method value="POST"/>
                    <class value="public"/>
                </resource>
            </resources>
        </page>

    </pages>

</ruleset>
